{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "emitDeclarationOnly": false,

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": false,

    "stripInternal": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts", "src/**/*.type.test.ts", "src/example.ts"]
}
